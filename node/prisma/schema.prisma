generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://localhost:27017/chat"
}


model User {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  email               String    @unique
  name                String?
  
  password            String  

  chats               ChatParticipant[]
  messages            Message[]
}




model ChatParticipant {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  user            User      @relation(fields: [userId], references: [id])
  userId          String    @db.ObjectId
  
  chatId          String    @db.ObjectId   
  chat            Chat      @relation(fields: [chatId], references: [id])
}

model Message {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  
  chat    Chat  @relation(name: "chatMessages", fields: [chatId], references: [id])
  chatId  String @db.ObjectId

  isLatestIn      Chat? @relation("latestChatMessage")

  senderId        String        @db.ObjectId
  sender          User          @relation(fields: [senderId], references: [id])

  body            String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Chat {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  participants    ChatParticipant[]

  messages        Message[]  @relation("chatMessages")
  latestMessage   Message?   @relation(name: "latestChatMessage", fields: [latestMessageId], references: [id], onUpdate: NoAction, onDelete: NoAction)
  latestMessageId String?    @unique @db.ObjectId

  name            String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

}
